# ===========================================
# GOLIVE DEVOPS PLATFORM - DEVELOPMENT ENV
# ===========================================

# Environment
NODE_ENV=development
PYTHON_ENV=development

# Application
APP_NAME="GoLive DevOps Platform"
APP_VERSION="1.0.0"
APP_HOST=localhost
APP_PORT=3000

# API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=localhost

# Backend Services Ports
PIPELINE_SERVICE_PORT=8001
TESTING_SERVICE_PORT=8002
INTEGRATION_SERVICE_PORT=8003
CODE_ANALYSIS_SERVICE_PORT=8004
MONITORING_SERVICE_PORT=8005

# AI Services
AI_SERVICES_PORT=9000
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=golive_devops
DB_USER=golive_user
DB_PASSWORD=golive_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# InfluxDB Configuration
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=golive
INFLUXDB_BUCKET=metrics

# ElasticSearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRES_IN=86400000

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Integration Services
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
BITBUCKET_CLIENT_ID=your_bitbucket_client_id
BITBUCKET_CLIENT_SECRET=your_bitbucket_client_secret

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USERNAME=admin
JENKINS_PASSWORD=admin

# JIRA Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

# SonarQube Configuration
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonarqube_token

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MONITORING=true
ENABLE_TESTING_AUTOMATION=true
ENABLE_CODE_ANALYSIS=true

# Development Tools
DEBUG=true
HOT_RELOAD=true
VERBOSE_LOGGING=true