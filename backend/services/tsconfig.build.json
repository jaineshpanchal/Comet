{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "./*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
