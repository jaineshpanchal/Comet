# ==================================================
# Production Environment Variables
# ==================================================
# IMPORTANT: Never commit actual production secrets!
# ==================================================

# Database
POSTGRES_USER=golive
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=golive_prod

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT Secrets
JWT_SECRET=GENERATE_WITH_openssl_rand_-hex_32
JWT_REFRESH_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# Encryption
ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_-hex_32

# CSRF
CSRF_SECRET=GENERATE_WITH_openssl_rand_-hex_64

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# Tracing
OTEL_ENABLED=true
OTEL_EXPORTER=jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
